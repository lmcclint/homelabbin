# --- Gitea app ---
GITEA_IMAGE=docker.gitea.com/gitea
GITEA_VERSION=1.25.2
GITEA_UID=1000
GITEA_GID=1000
TZ=America/Los_Angeles

# --- Network (macvlan on VLAN 60) ---
SYNOLOGY_INTERFACE=eth0.60
VLAN60_SUBNET=10.20.60.0/24
VLAN60_GATEWAY=10.20.60.1
GITEA_IP=10.20.60.11

# --- Database ---
POSTGRES_VERSION=15
GITEA_DB_USER=gitea
GITEA_DB_PASSWORD=change_me
GITEA_DB_NAME=gitea

# Data locations (change to Synology shared folders if desired)
GITEA_DATA=./gitea
GITEA_POSTGRES_DATA=./postgres

# Reverse proxy (set later when adding Caddy)
# GITEA_DOMAIN=git.example.local
# GITEA_SSH_DOMAIN=git.example.local
# GITEA_ROOT_URL=https://git.example.local/
